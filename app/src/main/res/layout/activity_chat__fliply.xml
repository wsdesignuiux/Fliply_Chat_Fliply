<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_messages"/>

        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardElevation="2dp"-->
        <!--android:layout_marginBottom="15dp"-->
        <!--android:background="#00000000">-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:elevation="7dp"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView1"
                android:src="@drawable/img"
                android:layout_width="63dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="7dip" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <customfonts.MyTextView_SF_Pro_Display_Medium
                    android:id="@+id/txttrades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#a9a9b0"
                    android:text="DJI Mavic Pro"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-18dp"
                    android:layout_marginTop="-10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/oval_1"
                        android:src="@drawable/ic_clear_black_24dp"
                        android:tint="#a9a0b0" />

                    <customfonts.MyTextView_SF_Pro_Display_Semibold
                        android:layout_marginLeft="66dp"
                        android:background="@drawable/rect_blue"
                        android:layout_width="78dp"
                        android:layout_height="33dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:text="Buy Now"
                        android:textColor="#ffffff"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:tint="#000000"
                        android:layout_marginTop="4dp"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:src="@drawable/ic_rupee"/>

                    <customfonts.MyTextView_SF_Pro_Display_Bold
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45,000"
                        android:textSize="12sp"
                        android:textColor="#3b3b3b"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4.5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shadow"/>
        <!--</android.support.v7.widget.CardView>-->

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/profile" />

            <customfonts.MyTextView_SF_Pro_Display_Semibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="25dp"
                android:text="Hey, thanks for the interest in my drone.
What would you like to know?"
                android:textColor="#3b3b3b"
                android:background="@drawable/rect_white_border"
                android:textSize="13sp"/>

        </LinearLayout>

        <customfonts.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="100dp"
            android:text="24m ago"
            android:textSize="10sp"
            android:textColor="#a9a9b0"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="Nice meeting you, Keith. I’m interested and \n would love to know more about the drone. \n Is it still under warranty? Do you have the \n bills and stuff?"
                android:textColor="#ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textSize="13sp"
                android:background="@drawable/rect_blue_border"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="14dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image1"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:text="24m ago"
                android:textSize="10sp"
                android:textColor="#a9a9b0"/>

            <ImageView
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_check"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/profile" />

            <customfonts.MyTextView_SF_Pro_Display_Semibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="22dp"
                android:text="For sure, my man. I do have them all.  It was bought last year, 24th Mar and still has warranty."
                android:textColor="#3b3b3b"
                android:background="@drawable/rect_white_border"
                android:textSize="13sp"/>

        </LinearLayout>


        <customfonts.TextViewSFProDisplayRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="100dp"
            android:text="24m ago"
            android:textSize="10sp"
            android:textColor="#a9a9b0"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <customfonts.MyTextView_SF_Pro_Display_Medium
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="Awesome. Would you accept 40k? I’m ready to purchase it."
                android:textColor="#ffffff"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textSize="13sp"
                android:background="@drawable/rect_blue_border"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image4"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/profile" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:text="24m ago"
                android:textSize="12sp"
                android:textColor="#a9a9b0"/>

            <ImageView
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_check_grey"/>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_plus"/>

            <customfonts.EditText__SF_Pro_Display_Medium
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type something..."
                android:textSize="12sp"
                android:textColor="#a9a9b0"/>

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_smile"/>

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_send"/>



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
